<h2>Area riservata</h2>

<p>I campi contrassegnati con (*) sono obbligatori.</p>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :username, :label => "Nome utente", :required => true, :autofocus => true %>
    <%= f.input :password, :label => "Password", :required => true %>
    <%= f.input :remember_me, :label => "Ricordami", :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Login", class: "btn btn-success"%>
  </div>
<% end %>

<%= render "admin_users/shared/links" %>
